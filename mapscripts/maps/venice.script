	// ========================================

	// ========================================
	// death / rebirth

	rebirth
	{
		accum 1 bitreset 7 // we're alive again
		accum 1 bitreset 9 // we're visibly alive


		trigger self script_lockout

		// *----------------------------------- vo ------------------------------------------*
		wm_teamvoiceannounce 0 "venice_axis_boat_repaired"

		wm_teamvoiceannounce 1 "venice_allies_boat_repaired"
		// *---------------------------------------------------------------------------------*
		wm_announce "The Boat has been repaired"

		setstate boat_smoke invisible

		trigger self script_lockout_stop
	}

	death
	{
		accum 1 bitset 7
	}

	trigger deathcheck
	{
		accum 1 abort_if_not_bitset 7	// are we dead?
		accum 1 abort_if_bitset 9		// are we not already visibly dead?
		accum 1 abort_if_bitset 2		// are we not following a spline?
		accum 1 abort_if_bitset 4		// are we not in a script lockout?

		accum 1 bitset 9				// we're now visibly dead

		wm_announce "The Boat has been damaged!"

		// *----------------------------------- vo ------------------------------------------*
		wm_teamvoiceannounce 0 "venice_axis_boat_damaged"

		wm_teamvoiceannounce 1 "venice_allies_boat_damaged"
		// *---------------------------------------------------------------------------------*

		setstate boat_smoke default
		kill boat_construct

		trigger boat_engine stop
		trigger boat prop_stop
		// <<<< stop anim goes here

		resetscript
	}

