	trigger stuck_check
	{
		accum 1 bitreset 3

		trigger boat stuck_check_relic
		trigger boat stuck_check_barrier1
		trigger boat stuck_check_barrier2
		trigger boat stuck_check_scriptlockout
		trigger boat stuck_check_finished
	}

	trigger stuck_check_finished
	{
		accum 3 abort_if_not_equal 86

		accum 1 bitset 3
	}

	trigger stuck_check_scriptlockout
	{
		accum 1 abort_if_not_bitset 4

		accum 1 bitset 3
	}

	trigger stuck_check_relic
	{
		accum 3 abort_if_not_equal 0

		accum 0 abort_if_greater_than 0

		accum 1 bitset 3
	}

	trigger stuck_check_barrier1
	{
		accum 3 abort_if_not_equal 43

		accum 1 abort_if_not_bitset 0

		accum 1 bitset 3
	}

	trigger stuck_check_barrier2
	{
		accum 3 abort_if_not_equal 70

		accum 1 abort_if_not_bitset 1

		accum 1 bitset 3
	}

