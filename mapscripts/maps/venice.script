// ===========================================================================================
// ===========================================================================================
// enable/disable

	trigger gun_enable
	{
		accum 1 abort_if_bitset 1	//death check
		accum 1 abort_if_bitset 2	//are we already moving?
		accum 1 abort_if_bitset 6	//are we waiting to fire?
		accum 5 abort_if_not_equal 0	//are we not in a script lockout?

		setstate gunlighton invisible
		setstate gunlightoff default

		trigger self move
	}

	trigger gun_disable
	{
		trigger self deathcheck
	}
	
// ===========================================================================================
// ===========================================================================================
// death / rebirth

	rebirth
	{
		accum 1 bitreset 3	// we're visibly alive
		accum 1 bitreset 1	// we're alive again


		// *----------------------------------- vo ------------------------------------------*

		wm_teamvoiceannounce 0 "venice_axis_gun_repaired"

		wm_teamvoiceannounce 1 "venice_allies_gun_repaired"

		// *---------------------------------------------------------------------------------*	
		wm_announce "The AT Gun has been repaired!"

		changemodel models/mapobjects/pak75_c1/pak75_c1.md3

		setstate at_gunbarrel default
		setstate gun_smoke invisible

		setstate gunlighton default
		setstate gunlightoff invisible

	}

	death
	{
		accum 1 bitset 1
	}

	trigger deathcheck
	{
		accum 1 abort_if_not_bitset 1	//are we dead?
		accum 1 abort_if_bitset 3	//are we not already visibly dead?
		accum 1 abort_if_bitset 2	//are we not moving?
		accum 5 abort_if_not_equal 0	// are we not in a script lockout?

		accum 1 bitset 3		//we're now visibly dead

		wm_announce "The AT Gun has been damaged!"

		// *----------------------------------- vo ------------------------------------------*

		wm_teamvoiceannounce 0 "venice_axis_gun_damaged"

		wm_teamvoiceannounce 1 "venice_allies_gun_damaged"

		// *---------------------------------------------------------------------------------*

		accum 1 bitset 4

		changemodel models/mapobjects/pak75_c1/pak75_broken_c1.md3

		setstate at_gunbarrel invisible
		setstate gun_smoke default

		setstate gunlighton invisible
		setstate gunlightoff default

		kill gun_construct

		resetscript
	}
}	

