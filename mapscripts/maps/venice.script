	trigger run_incpos
	{
		accum 3 inc 1
		globalaccum 1 inc 1
	}

	trigger run_continue
	{
		trigger self run_incpos
		trigger self deathcheck
		trigger self stopcheck
		trigger self gun_deathcheck
		trigger self move
	}
